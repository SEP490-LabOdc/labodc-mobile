<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Dark mode gradient với màu tối hơn -->
    <gradient
        android:startColor="#1A252F"
        android:endColor="#0D1B24"
        android:angle="135"
        android:type="linear" />
    
    <!-- Rounded corners -->
    <corners android:radius="20dp" />
    
    <!-- Padding -->
    <padding
        android:left="16dp"
        android:top="20dp"
        android:right="16dp"
        android:bottom="20dp" />
</shape>
